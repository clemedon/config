# @file     .gitconfig
# @brief    Git configuration file.
# @author   clemedon (Clément Vidon)

[user]
	name = Clément VIDON
	email = cvidon@student.42.fr
	username = clemedon
[init]
    defaultBranch = main
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = less
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[gc]
	reflogExpire = 1.month.ago
[pull]
    rebase = true
[fetch]
    prune = true
[diff]
    colorMoved = zebra
    tool = vimdiff
[merge]
	tool = nvim
[alias]
    aa = add --all
    ap = add -p
    ##########
    ca = commit --amend
    cm = commit -m
    cp = commit -p
    cv = commit -v
    ##########
    di = diff
    ds = diff --staged
    ##########
    lp = log --pretty=format:"%an %cr : %s" --stat --graph -2
    pu = push
    re = reset
    ss = status -sb
    push = "!f() { \
        branch=$(git symbolic-ref --short HEAD); \
        if [ \"$branch\" = \"master\" ]; then \
            echo 'You are on master branch! Push aborted.'; \
            exit 1; \
        else \
            git push \"$@\"; \
        fi \
    }; f"
[commit]
	template = "~/.gitmessage"
[credential]
	helper = cache
[url "git@gitlab.infra.online.net:"]
	insteadOf = https://gitlab.infra.online.net/
[mergetool "nvim"]
	cmd = nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[mergetool]
	keepBackup = false
